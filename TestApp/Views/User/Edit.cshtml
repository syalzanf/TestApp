@model UsersEntity

@{
    ViewData["Title"] = "Edit User";
}

<form asp-action="Edit" asp-controller="User" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="row justify-content-center"> 
        <div class="col-md-4"> 
            <div class="card">
                <div class="card-header">
                    <h3>@ViewData["Title"]</h3>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label for="Name">Name</label>
                        <input asp-for="Name" type="text" class="form-control" placeholder="Enter name" required>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group">
                        <label for="Alamat">Address</label>
                        <input asp-for="Alamat" type="text" class="form-control" placeholder="Enter address" required>
                        <span asp-validation-for="Alamat" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label for="Telepon">Phone</label>
                        <input asp-for="Telepon" type="tel" class="form-control" placeholder="Enter phone number" required>
                        <span asp-validation-for="Telepon" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label for="Email">Email</label>
                        <input asp-for="Email" type="email" class="form-control" placeholder="Enter email" required>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <div asp-validation-summary="All" class="text-danger"></div>
                    </div>
                </div>
                <div class="card-footer text-left">
                    <button type="submit" class="btn btn-success">Save Changes</button>
                    <a asp-action="Index" asp-controller="User" class="btn btn-secondary">Cancel</a>
                </div>
            </div>
        </div>
    </div>
</form>
